# ============================================
# LinkSoul Production Environment Variables
# ============================================

# --- Domain / SSL ---
APP_DOMAIN=example.com
PROJECT_BASE_PATH=/linksoul
LETSENCRYPT_EMAIL=ops@example.com

# --- Runtime ---
NODE_ENV=production
PORT=3000

# --- Database ---
# Current backend Prisma datasource provider is sqlite.
# Production default uses sqlite file in mounted volume:
DATABASE_URL=file:/app/data/prod.db
REDIS_URL=redis://redis:6379

# --- Postgres container vars (for future migration / maintenance) ---
POSTGRES_USER=linksoul
POSTGRES_PASSWORD=change-this-strong-password
POSTGRES_DB=linksoul

# --- Auth ---
JWT_SECRET=change-this-to-a-long-random-secret
JWT_EXPIRES_IN=7d

# --- AI Service URL (internal container address) ---
AI_SERVICE_URL=http://ai:8000

# --- DeepSeek ---
DEEPSEEK_API_KEY=sk-xxxxx
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_CHAT_MODEL=deepseek-chat
DEEPSEEK_REASONER_MODEL=deepseek-reasoner

# --- OSS / Object Storage ---
OSS_ENDPOINT=https://oss.example.com
OSS_ACCESS_KEY=replace-me
OSS_SECRET_KEY=replace-me
OSS_BUCKET=linksoul

# --- Avatar / Throttle ---
AVATAR_POOL_PER_STYLE=8
THROTTLE_TTL_MS=60000
THROTTLE_LIMIT=100
ADMIN_THROTTLE_DELETE_USER_LIMIT=5
ADMIN_THROTTLE_DELETE_USER_TTL_MS=60000
ADMIN_THROTTLE_RESET_PASSWORD_LIMIT=10
ADMIN_THROTTLE_RESET_PASSWORD_TTL_MS=60000
ADMIN_THROTTLE_CREATE_ADMIN_LIMIT=5
ADMIN_THROTTLE_CREATE_ADMIN_TTL_MS=60000
ADMIN_THROTTLE_CHANGE_PASSWORD_LIMIT=10
ADMIN_THROTTLE_CHANGE_PASSWORD_TTL_MS=60000
ADMIN_THROTTLE_DELETE_ADMIN_LIMIT=5
ADMIN_THROTTLE_DELETE_ADMIN_TTL_MS=60000
