{
  "name": "linksoul",
  "version": "0.1.0",
  "private": true,
  "description": "LinkSoul - AI-powered social connection platform",
  "scripts": {
    "dev:backend": "pnpm --filter @linksoul/backend dev",
    "dev:mobile": "pnpm --filter @linksoul/mobile start",
    "dev:ai": "python -m uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload --app-dir ai-services",
    "dev:backend:safe": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/restart-backend-safe.ps1",
    "dev:admin:safe": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/restart-admin-safe.ps1",
    "dev:check:services": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/check-services.ps1",
    "dev:admin": "pnpm --filter @linksoul/admin dev",
    "build:backend": "pnpm --filter @linksoul/backend build",
    "build:mobile": "pnpm --filter @linksoul/mobile build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "docker:dev": "docker compose -f infrastructure/docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f infrastructure/docker/docker-compose.yml down",
    "db:migrate": "pnpm --filter @linksoul/backend prisma:migrate",
    "db:seed": "pnpm --filter @linksoul/backend prisma:seed",
    "smoke:fun": "node ./scripts/smoke-fun.js"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.30.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/engines",
      "prisma",
      "@nestjs/core",
      "unrs-resolver",
      "better-sqlite3"
    ]
  },
  "devDependencies": {
    "turbo": "^2.8.10"
  }
}
