# ============================================
# LinkSoul Environment Variables
# Copy this file to .env and fill in the values
# ============================================

# --- Database ---
DATABASE_URL=postgresql://linksoul:linksoul_dev@localhost:5432/linksoul
REDIS_URL=redis://localhost:6379

# --- Auth ---
JWT_SECRET=change-me-to-a-secure-random-string
JWT_EXPIRES_IN=7d

# --- DeepSeek LLM ---
DEEPSEEK_API_KEY=sk-xxxxx
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_CHAT_MODEL=deepseek-chat
DEEPSEEK_REASONER_MODEL=deepseek-reasoner

# --- Object Storage (MinIO for dev) ---
OSS_ENDPOINT=http://localhost:9000
OSS_ACCESS_KEY=minioadmin
OSS_SECRET_KEY=minioadmin
OSS_BUCKET=linksoul

# --- Milvus (Vector DB) ---
MILVUS_HOST=localhost
MILVUS_PORT=19530

# --- App Config ---
NODE_ENV=development
PORT=3000
AI_SERVICE_URL=http://localhost:8000

# --- Global API Throttling ---
THROTTLE_TTL_MS=60000
THROTTLE_LIMIT=100

# --- Admin Risk Operation Throttling ---
# 删除用户
ADMIN_THROTTLE_DELETE_USER_LIMIT=5
ADMIN_THROTTLE_DELETE_USER_TTL_MS=60000
# 重置密码
ADMIN_THROTTLE_RESET_PASSWORD_LIMIT=10
ADMIN_THROTTLE_RESET_PASSWORD_TTL_MS=60000
# 创建管理员
ADMIN_THROTTLE_CREATE_ADMIN_LIMIT=5
ADMIN_THROTTLE_CREATE_ADMIN_TTL_MS=60000
# 修改管理员密码
ADMIN_THROTTLE_CHANGE_PASSWORD_LIMIT=10
ADMIN_THROTTLE_CHANGE_PASSWORD_TTL_MS=60000
# 撤销管理员权限
ADMIN_THROTTLE_DELETE_ADMIN_LIMIT=5
ADMIN_THROTTLE_DELETE_ADMIN_TTL_MS=60000
